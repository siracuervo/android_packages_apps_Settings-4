<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/button_settings_title">

    <PreferenceScreen
        android:key="power_menu_settings"
        android:title="@string/power_menu_settings_title"
        android:summary="@string/power_menu_settings_summary"
        android:fragment="com.android.settings.darkkat.PowerMenuSettings" />

    <PreferenceCategory
        android:key="volume_button_category"
        android:title="@string/volume_button_category_title">

        <CheckBoxPreference
            android:key="volume_button_music_controls"
            android:title="@string/volume_button_music_controls_title"
            android:summary="@string/volume_button_music_controls_summary"
            android:persistent="false" />

        <CheckBoxPreference
            android:key="volume_button_wake"
            android:title="@string/volume_button_wake_title"
            android:summary="@string/volume_button_wake_summary" 
            android:defaultValue="false"/>

    </PreferenceCategory>
</PreferenceScreen>
