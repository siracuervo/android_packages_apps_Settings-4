<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory
            android:key="slim_recents_panel_cat_options"
            android:title="@string/slim_recents_panel_cat_options_title" >

        <CheckBoxPreference
                android:key="recent_apps_type"
                android:title="@string/recent_apps_type_title"
                android:summary="@string/recent_apps_type_summary"
                android:persistent="false" />

        <ListPreference
                android:key="recents_panel_scale"
                android:entries="@array/recents_panel_scale_entries"
                android:entryValues="@array/recents_panel_scale_values"
                android:title="@string/recents_panel_scale_title"
                android:persistent="false" />

        <ListPreference
                android:key="recents_panel_expanded_mode"
                android:entries="@array/recents_panel_expanded_mode_entries"
                android:entryValues="@array/recents_panel_expanded_mode_values"
                android:title="@string/recents_panel_expanded_mode_title"
                android:persistent="false" />

        <CheckBoxPreference
                android:key="recents_panel_show_topmost"
                android:title="@string/recents_panel_show_topmost_title"
                android:summary="@string/recents_panel_show_topmost_summary"
                android:persistent="false" />

        <CheckBoxPreference
                android:key="recents_panel_lefty_mode"
                android:title="@string/recents_panel_lefty_mode_title"
                android:summary="@string/recents_panel_lefty_mode_summary"
                android:persistent="false" />

    </PreferenceCategory>

    <PreferenceCategory
            android:key="slim_recents_panel_cat_colors"
            android:title="@string/slim_recents_panel_cat_colors_title" >

        <net.margaritov.preference.colorpicker.ColorPickerPreference
                android:key="recents_panel_bg_color"
                android:title="@string/bg_title"
                android:defaultValue="0xe6000000" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
                android:key="recents_panel_empty_icon_color"
                android:title="@string/recents_panel_empty_icon_color_title"
                android:defaultValue="0xffcdcdcd" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
                android:key="recents_panel_header_bg_color"
                android:title="@string/recents_panel_header_bg_color_title"
                android:defaultValue="0xff1c1c1c" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
                android:key="recents_panel_card_bg_color"
                android:title="@string/recents_panel_card_bg_color_title"
                android:defaultValue="0xff1c1c1c" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
                android:key="recents_panel_header_text_color"
                android:title="@string/recents_panel_header_text_color_title"
                android:defaultValue="0xffffffff" />

    </PreferenceCategory>
</PreferenceScreen>
