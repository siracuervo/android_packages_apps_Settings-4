<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/status_bar_battery_status_style_title">

	<ListPreference
	    android:key="battery_status_style"
	    android:dialogTitle="@string/battery_status_style_title"
	    android:title="@string/battery_status_style_title"
	    android:entries="@array/battery_status_style_entries"
	    android:entryValues="@array/battery_status_style_values" />

	<CheckBoxPreference
		android:key="battery_status_show_text"
		android:title="@string/battery_status_show_text_title"
		android:summary="@string/battery_status_show_text_summary" />

	<CheckBoxPreference
		android:key="battery_status_custom_frame_color"
		android:title="@string/battery_status_custom_frame_color_title"
		android:summary="@string/battery_status_custom_frame_color_summary" />

	<CheckBoxPreference
		android:key="battery_circle_dotted"
		android:title="@string/battery_status_circle_dotted_title"
		android:summary="@string/battery_status_circle_dotted_summary" />

    <ListPreference
        android:key="battery_circle_dot_length"
        android:title="@string/dot_length_title"
        android:entries="@array/battery_circle_dot_entries"
        android:entryValues="@array/battery_circle_dot_values"
        android:persistent="false"
        android:defaultValue="3" />

    <ListPreference
        android:key="battery_circle_dot_interval"
        android:title="@string/dot_interval_title"
        android:entries="@array/battery_circle_dot_entries"
        android:entryValues="@array/battery_circle_dot_values"
        android:persistent="false"
        android:defaultValue="2" />

    <ListPreference
        android:key="battery_circle_dot_offset"
        android:title="@string/dot_offset_title"
        android:entries="@array/battery_circle_dot_entries"
        android:entryValues="@array/battery_circle_dot_values"
        android:persistent="false"
        android:defaultValue="0" />

    <net.margaritov.preference.colorpicker.ColorPickerPreference
        android:key="battery_status_color"
        android:title="@string/battery_status_color"
        android:defaultValue="0xffffffff" />

    <net.margaritov.preference.colorpicker.ColorPickerPreference
        android:key="battery_frame_color"
        android:title="@string/battery_frame_color"
        android:defaultValue="0x66ffffff" />

    <net.margaritov.preference.colorpicker.ColorPickerPreference
        android:key="battery_text_color"
        android:title="@string/battery_text_color"
        android:defaultValue="0xffffffff" />

    <net.margaritov.preference.colorpicker.ColorPickerPreference
        android:key="battery_text_charging_color"
        android:title="@string/battery_text_charging_color"
        android:defaultValue="0xff00ff00" />

    <ListPreference
        android:key="circle_battery_animation_speed"
        android:title="@string/circle_battery_animation_speed"
        android:entries="@array/circle_battery_animation_speed_entries"
        android:entryValues="@array/circle_battery_animation_speed_values" />

</PreferenceScreen>
