<PreferenceScreen 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:settings="http://schemas.android.com/apk/res/com.android.settings"
    android:title="@string/heads_up_title">

    <CheckBoxPreference
        android:key="heads_up_expanded"
        android:title="@string/heads_up_expanded_title"
        android:summary="@string/heads_up_expanded_summary"
        android:defaultValue="false" />

    <CheckBoxPreference
        android:key="heads_up_show_update"
        android:title="@string/heads_up_show_updates_title"
        android:summary="@string/heads_up_show_updates_summary"
        android:defaultValue="false" />

    <CheckBoxPreference
        android:key="heads_up_gravity"
        android:title="@string/heads_up_gravity_title"
        android:summary="@string/heads_up_gravity_summary"
        android:persistent="false"
        android:defaultValue="false" />

    <PreferenceCategory
            android:key="heads_up_cat_timeout"
            android:title="@string/heads_up_cat_timeout_title">

        <ListPreference
            android:key="heads_up_snooze_time"
            android:title="@string/heads_up_snooze_title"
            android:entries="@array/heads_up_snooze_entries"
            android:entryValues="@array/heads_up_snooze_values" />

        <ListPreference
                android:key="heads_up_timeout"
                android:title="@string/heads_up_timeout_title"
                android:entries="@array/heads_up_timeout_entries"
                android:entryValues="@array/heads_up_timeout_values"/>

        <CheckBoxPreference
                android:key="heads_up_use_custom_timeout_fs"
                android:title="@string/heads_up_use_custom_timeout_fs_title"
                android:summary="@string/heads_up_use_custom_timeout_fs_summary"
                android:defaultValue="false" />

    </PreferenceCategory>

    <PreferenceCategory
        android:key="heads_up_cat_colors"
        android:title="@string/cat_colors_title">

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="heads_up_bg_color"
            android:title="@string/bg_title"
            android:defaultValue="0xff181818" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="heads_up_bg_pressed_color"
            android:title="@string/bg_pressed_title"
            android:defaultValue="0xff454545" />

        <CheckBoxPreference
            android:key="heads_up_colorize_notif_icons"
            android:title="@string/heads_up_colorize_notif_icons_title"
            android:summary="@string/heads_up_colorize_notif_icons_summary"
            android:persistent="false"
            android:defaultValue="false" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="heads_up_icon_color"
            android:title="@string/icon_title"
            android:defaultValue="0xffffffff" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
            android:key="heads_up_text_color"
            android:title="@string/text_title"
            android:defaultValue="0xffffffff" />

    </PreferenceCategory>
</PreferenceScreen>
