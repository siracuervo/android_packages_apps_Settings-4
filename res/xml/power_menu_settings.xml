<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/power_menu_settings_title">

    <PreferenceCategory
            android:key="power_menu_cat_options"
            android:title="@string/power_menu_cat_options_title" >

        <PreferenceScreen
                android:key="power_menu_settings"
                android:fragment="com.android.settings.darkkat.dslv.ButtonsListViewSettings"
                android:title="@string/arrangement_title">
            <extra android:name="buttonMode" android:value="2" />
            <extra android:name="maxAllowedButtons" android:value="8" />
            <extra android:name="disableLongpress" android:value="true" />
            <extra android:name="disableDeleteLastEntry" android:value="true" />
            <extra android:name="actionValues" android:value="shortcut_action_power_menu_values" />
            <extra android:name="actionEntries" android:value="shortcut_action_power_menu_entries" />
        </PreferenceScreen>

        <ListPreference
             android:key="power_menu_icon_color_mode"
             android:title="@string/power_menu_icon_color_mode_title"
             android:entries="@array/icon_color_mode_entries"
             android:entryValues="@array/icon_color_mode_values"
             android:dialogTitle="@string/button_color_mode_dialog_title" />

    </PreferenceCategory>

    <PreferenceCategory
            android:key="power_menu_cat_colors"
            android:title="@string/power_menu_cat_colors_title" >

        <net.margaritov.preference.colorpicker.ColorPickerPreference
             android:key="power_menu_icon_color"
             android:title="@string/icon_title"
             android:defaultValue="0xffffffff" />

        <net.margaritov.preference.colorpicker.ColorPickerPreference
             android:key="power_menu_text_color"
             android:title="@string/text_title"
             android:defaultValue="0xffffffffff" />

    </PreferenceCategory>
</PreferenceScreen>
