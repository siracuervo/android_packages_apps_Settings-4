<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:title="@string/status_bar_battery_bar_style_title">

    <CheckBoxPreference
        android:key="status_bar_show_battery_bar"
        android:title="@string/show_title"
        android:summary="@string/status_bar_show_battery_bar_summary" />

	<ListPreference
		android:key="battery_bar_position"
		android:title="@string/battery_bar_position_title"
		android:entries="@array/battery_bar_position_entries"
		android:entryValues="@array/battery_bar_position_values" />

	<CheckBoxPreference
		android:key="battery_bar_center"
		android:title="@string/battery_bar_center_title"
		android:summary="@string/battery_bar_center_summary" />

	<CheckBoxPreference
		android:key="battery_bar_animate"
		android:title="@string/battery_bar_animate_title"
		android:summary="@string/battery_bar_animate_summary" />

	<ListPreference
		android:key="battery_bar_thickness"
		android:title="@string/battery_bar_thickness_title"
		android:entries="@array/battery_bar_thickness_entries"
		android:entryValues="@array/battery_bar_thickness_values" />

	<CheckBoxPreference
		android:key="battery_show_frame"
		android:title="@string/battery_show_frame_title"
		android:summary="@string/battery_show_frame_summary" />

	<net.margaritov.preference.colorpicker.ColorPickerPreference
		android:key="battery_bar_color"
		android:title="@string/color_title"
		android:defaultValue="0xffffffff" />

</PreferenceScreen>
